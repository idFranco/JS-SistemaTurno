<div class="form-container singUp" id="singUp">
    <div class="row">
        <div class="col-sm-12">

            <form class="form-login" id="form-login" action="/create-user" method="post">

                <h3><i class="bi bi-person-check"></i> Ingrese la información solicitada</h3>
                <hr>
                <div class="input">
                    <label for="dni">Número de documento</label>
                    <input type="text" class="form-control" name="dni" id="dni" maxlength="10" required>
                </div>
                <div class="input">
                    <label for="apellido">Apellido</label>
                    <input type="text" class="form-control" name="apellido" id="apellido" maxlength="20" required>
                </div>
                <div class="input">
                    <label for="nombre">Nombre</label>
                    <input type="text" class="form-control" name="nombre" id="nombre" maxlength="30" required>
                </div>
                <div class="input">
                    <label for="fnacimiento">Fecha de nacimiento</label>
                    <input type="text" class="form-control" name="fnacimiento" id="fnacimiento" maxlength="20" required>
                </div>
                <div class="input">
                    <label for="direccion">Dirección</label>
                    <input type="text" class="form-control" name="direccion" id="direccion" maxlength="50" required>
                </div>
                <div class="input">
                    <label for="telefono">Teléfono</label>
                    <input type="text" class="form-control" name="telefono" id="telefono" maxlength="20" required>
                </div>
                <div class="input">
                    <label for="email">Correo electrónico</label>
                    <input type="email" class="form-control" name="email" id="email" maxlength="50" required>
                </div>
                <div class="input">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control" name="password" id="password" minlength="4"
                        maxlength="12" required>
                </div>
                <div class="input">
                    <label for="password">Repetir contraseña</label>
                    <input type="password" class="form-control" name="passwordrep" id="passwordrep" minlength="4"
                        maxlength="12" required>
                </div>
                <div id="mensaje-error">{{checkError}}</div>

                <div class="button">
                    <class class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="button" onclick="cancel();" class="btn btn-secondary btn-sm">Cancelar</button>
                        <button type="submit" class="btn btn-primary btn-sm">Aceptar</button>
                    </class>
                </div>

            </form>

        </div>
    </div>

    {{>footer}}

</div>

